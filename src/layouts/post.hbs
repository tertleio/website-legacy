    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <meta name="description" content="{{description}}" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href="{{canonical}}" />

    <!-- socials -->
    <meta property="og:locale" content="en_GB" />
